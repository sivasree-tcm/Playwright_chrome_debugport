{
  "manifest_version": 3,
  "name": "AI Autofill Extension - Direct Fill",
  "version": "2.0.0",
  "description": "Automatically fill forms using AI-powered field mapping with direct autofill",

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icon.png"
  },

  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },

  "options_page": "options/options.html",

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "contextMenus",
    "notifications",
    "nativeMessaging"
  ],

  "host_permissions": [
    "https://www.googleapis.com/*",
    "http://localhost:3000/*"
  ],

  "oauth2": {
    "client_id": "683128185472-l9him8sjbo77df2mvuvelpu90p02c4qi.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.readonly"
    ]
  },

  "web_accessible_resources": [
    {
      "resources": [
        "picker/picker.html",
        "picker/*.html",
        "assets/*",
        "lib/mammoth.browser.min.js",
        "lib/pdf.min.js",
        "lib/pdf.worker.min.js",
        "lib/xlsx.full.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "commands": {
    "trigger-autofill": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "Trigger AI Autofill"
    }
  }
}